files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_kill_sqsd.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      # Force stop the SQS daemon so Celery can take exclusive control
      systemctl stop sqsd.service || true
      systemctl disable sqsd.service || true
      
commands:
  01_stop_sqsd_immediate:
    command: "systemctl stop sqsd || true"
    ignoreErrors: true
